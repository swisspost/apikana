<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>{{ customConfig.dotnetPackageId }}</PackageId>
    <Namespace>{{ customConfig.dotnetNamespace }}</Namespace>
    <!-- Custom Tag to specify the root namespace. -->
    <Authors>{{ customConfig.author }}</Authors>
    <Company>{{ customConfig.domain }}</Company>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <OutputType>Library</OutputType>

    <!--
            Version following Semantic Versioning guidelines: https://semver.org/
            If there is a suffix, the NuGet-Package will be treated as pre-release.
     -->
    <Version>{{ version }}</Version>
  </PropertyGroup>

  <ItemGroup>
    <!-- Packages referenced by the classes generated by NSwag -->
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0" />
    {{#each (ConvertDependency dependencies)}}
    <PackageReference Include="{{packageId}}" version="{{version}}" />
    {{/each}}
  </ItemGroup>

</Project>